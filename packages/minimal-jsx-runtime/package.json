{
  "name": "minimal-jsx-runtime",
  "version": "0.0.1",
  "description": "A private little wrapper for using JSX the above projects",
  "author": "the_dissidents",
  "license": "GPL-2.0-only",
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./jsx-runtime": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./jsx-dev-runtime": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "devDependencies": {
    "tsdown": "^0.15.6",
    "typescript": "^5.8.3"
  }
}
