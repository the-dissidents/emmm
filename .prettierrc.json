{
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "trailingComma": "es5",
    "printWidth": 80,
    "tabWidth": 4,
    "plugins": ["prettier-plugin-svelte"],
    "overrides": [
        {
            "files": ["*.html", "*.svelte"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.json5"],
            "options": {
                "singleQuote": false,
                "quoteProps": "preserve"
            }
        },
        {
            "files": ["*.yml"],
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": ["*.svelte"],
            "options": {
                "bracketSameLine": false
            }
        }
    ]
}
